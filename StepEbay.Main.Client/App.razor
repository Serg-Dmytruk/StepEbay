@using StepEbay.Common.Components

<CookieContainer>
<CascadingAuthenticationState>
<Router AppAssembly="@typeof(Program).Assembly" AdditionalAssemblies="@(new[] { typeof(StepEbay.Main.Client.Base.Pages.SignIn).Assembly })" PreferExactMatches="@true">
    <Found Context="routeData">
          <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    @*<Authorizing>
                        Preloader...
                    </Authorizing>*@
                    <NotAuthorized>
                        <Redirect Url="/signin"/>
                    </NotAuthorized>
                </AuthorizeRouteView>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p>Ой. нічогосінько не знайшлося</p>
        </LayoutView>
    </NotFound>
</Router>
</CascadingAuthenticationState>
</CookieContainer>
