@using StepEbay.Main.Client.Base.Pages;
<AuthorizeView>
    @*<Authorized>
    <Redirect Url="@($"https://{DomainOptions.Value.Main}")" />
    </Authorized>*@
    <NotAuthorized>
        <div class="modal fade show" id="myModal" style="display:block; background-color: rgba(10,10,10,.8);"
     aria-modal="true" role="dialog">
        <div class="modalLogWindow">
            <div class="mborder">
                 <p class="mMainHeader">З поверненням!</p>
                 <p class="mMainHeader2">Для входу заповни тут:</p>
                @if (!ShowPreloader)
                {
                    @if (ShowModal)
                    {
                        <ModalDialog Title="@_errors.FirstOrDefault().Key" Text="@_errors.FirstOrDefault().Value" OnClose='@CloseModal' />
                    }
                    <div class="minputDiv">
                        <input class="minput" type="text" @bind="SignInRequestDto.NickName" placeholder="Нікнейм" />
                    </div>
                    <div class="minputDiv">
                        <input class="minput" type="password" @bind="SignInRequestDto.Password" placeholder="Пароль" />
                    </div>
                    <div><input type="checkbox" style="cursor: pointer" @bind="RememberMe" /> Запам'ятати</div>
                    <button class="mbutton" @onclick="SignInRequest">Увійти</button>
                    <button class="closebutton" @onclick="ModalClose">Назад</button>
                }
                else
                {
                    <div class="spinner-border centerOnParrentHorizontal" role="status">
                        <span class="sr-only">Завантаження...</span>
                    </div>
                }
            </div>
        </div>
        </div>
                    <button class="mbutton" @onclick="SignInRequestAdmin">Увійти як Адміністратор</button>
                    <button class="mbutton" @onclick="SignInRequestUser">Увійти як Користувач</button>
    </NotAuthorized>
</AuthorizeView>

