<h3 class="TitleText">SIGN IN</h3>

<div class="divCenter">
    @if (!ShowPreloader)
    {
        @if(ShowModal)
        {
            <ModalDialog Title="@_errors.FirstOrDefault().Key" Text="@_errors.FirstOrDefault().Value" OnClose='@CloseModal'/>
        }
        <input class="myInput" type="text" @bind="SignInRequestDto.NickName" placeholder="Нікнейм" />
        <input class="myInput" type="password" @bind="SignInRequestDto.Password" placeholder="Пароль" />
        <span><input type="checkbox" style="cursor: pointer" class="myInput" @bind="RememberMe" /> Запам'ятати</span>

        <button class="btn btn-outline-primary centerOnParrentHorizontal" @onclick="SignInRequest">Увійти</button>

        <a href="/signup">Реєстрація</a>
    }
    else
    {
        <div class="spinner-border centerOnParrentHorizontal" role="status">
            <span class="sr-only">Завантаження...</span>
        </div>
    }
</div>
