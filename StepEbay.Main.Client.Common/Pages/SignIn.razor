<h3 class="TitleText">SIGN IN</h3>

<div class="divCenter">
    @if (!_showPreloader)
    {
        <input class="myInput" type="text" @bind="_signInRequestDto.NickName" placeholder="Nickname" />
        <input class="myInput" type="password" @bind="LoginData.Password" placeholder="Password" />
        <span><input type="checkbox" style="cursor: pointer" class="myInput" @bind="_rememberMe" /> Save me</span>
        <button class="btn btn-outline-primary centerOnParrentHorizontal" @onclick="SigninRequest">Login</button>
    }
    else
    {
        <div class="spinner-border centerOnParrentHorizontal" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    }
</div>

